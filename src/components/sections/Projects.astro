---
import GitHub from "@/icons/GitHub.astro"
import Section from "../Section.astro"

import { projects } from "@cv"
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(
        ({ url, description, highlights, name, isActive, github }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <a href={url} target="_blank" title={`Ver el proyecto ${name}`}>
                      {name}
                    </a>
                    {isActive && <span>•</span>}
                    {github && github !== "" && (
                      <a
                        class="github-code-link"
                        href={github}
                        target="_blank"
                        title={`Ver código fuente del proyecto ${name}`}
                      >
                        <GitHub />
                      </a>
                    )}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>
                  })}
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-unit);
    margin-inline: calc(var(--space-unit) * -2);
  }

  article {
    border-radius: var(--radius-md);
    border: 1px solid var(--line);
    gap: calc(var(--space-unit) * 2);
    display: flex;
    flex-direction: column;
    padding: calc(var(--space-unit) * 2);
    height: 100%;
    background: var(--paper-elevated);
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  }

  article:hover {
    border-color: var(--line-subtle);
    box-shadow: var(--shadow);
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: var(--space-unit);
    color: var(--ink);
    font-weight: 500;
  }

  article a {
    color: var(--ink);
    transition: color var(--transition-fast);
  }

  article a:hover {
    color: var(--accent);
  }

  article a:focus {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  article a:focus:not(:focus-visible) {
    outline: none;
  }

  article p {
    font-size: 0.8125rem;
    line-height: 1.4;
    margin-bottom: var(--space-unit);
    color: var(--ink-secondary);
  }

  article h3 span {
    color: var(--accent);
    animation-name: flicker;
    animation-duration: 3s;
    animation-timing-function: ease-in;
    animation-iteration-count: infinite;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-unit);
  }

  footer span {
    border-radius: var(--radius-sm);
    background: var(--line-subtle);
    color: var(--ink-tertiary);
    font-size: 0.6875rem;
    font-weight: 500;
    padding: calc(var(--space-unit) * 0.25) calc(var(--space-unit) * 0.75);
  }

  .github-code-link {
    margin-left: calc(var(--space-unit) * 0.5);
    display: inline-flex;
    align-items: center;
  }

  @keyframes flicker {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.4;
    }
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0;
    }

    article {
      border: none;
      border-bottom: 1px solid var(--line);
      box-shadow: none;
      padding: 0 0 calc(var(--space-unit) * 2);
      border-radius: 0;
      background: transparent;
    }

    article:hover {
      box-shadow: none;
    }
  }

  @media print {
    article h3 span {
      animation-name: none;
    }
  }
</style>
