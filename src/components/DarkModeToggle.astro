---
// Componente para el toggle de modo oscuro
---

<button id="dark-mode-toggle" class="dark-mode-toggle no-print" aria-label="Alternar modo oscuro">
  <svg id="sun-icon" class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <circle cx="12" cy="12" r="5"/>
    <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
  </svg>
  <svg id="moon-icon" class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
  </svg>
</button>

<script>
  const VIEW_TRANSITION_DURATION = 400

  class DarkModeManager {
    toggle: HTMLElement | null
    sunIcon: HTMLElement | null
    moonIcon: HTMLElement | null
    isDark: boolean

    constructor() {
      this.toggle = document.getElementById('dark-mode-toggle')
      this.sunIcon = document.getElementById('sun-icon')
      this.moonIcon = document.getElementById('moon-icon')
      this.isDark = this.getInitialTheme()
      this.init()
    }

    getInitialTheme() {
      const saved = localStorage.getItem('dark-mode')
      if (saved !== null) return saved === 'true'
      return window.matchMedia('(prefers-color-scheme: dark)').matches
    }

    init() {
      this.applyTheme()
      this.setupEventListeners()
      this.updateIcon()
    }

    applyTheme() {
      if (this.isDark) document.documentElement.classList.add('dark')
      else document.documentElement.classList.remove('dark')
    }

    updateIcon() {
      if (this.isDark) {
        if (this.sunIcon) this.sunIcon.style.display = 'block'
        if (this.moonIcon) this.moonIcon.style.display = 'none'
      } else {
        if (this.sunIcon) this.sunIcon.style.display = 'none'
        if (this.moonIcon) this.moonIcon.style.display = 'block'
      }
    }

    performToggle() {
      this.isDark = !this.isDark
      this.applyTheme()
      this.updateIcon()
      localStorage.setItem('dark-mode', this.isDark.toString())
    }

    async toggleTheme() {
      const reducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches
      const useViewTransition =
        !reducedMotion &&
        typeof document.startViewTransition === 'function' &&
        this.toggle

      if (useViewTransition && this.toggle) {
        const toggle = this.toggle
        const vt = document.startViewTransition(() => {
          this.performToggle()
        })
        await vt.ready
        const { top, left, width, height } = toggle.getBoundingClientRect()
        const x = left + width / 2
        const y = top + height / 2
        const maxRadius = Math.hypot(
          Math.max(left, window.innerWidth - left),
          Math.max(top, window.innerHeight - top)
        )
        document.documentElement.animate(
          {
            clipPath: [
              `circle(0px at ${x}px ${y}px)`,
              `circle(${maxRadius}px at ${x}px ${y}px)`,
            ],
          },
          {
            duration: VIEW_TRANSITION_DURATION,
            easing: 'ease-in-out',
            pseudoElement: '::view-transition-new(root)',
          } as KeyframeAnimationOptions
        )
      } else {
        this.performToggle()
      }
    }

    setupEventListeners() {
      this.toggle?.addEventListener('click', (e) => {
        e.preventDefault()
        this.toggleTheme()
      })

      document.addEventListener('keydown', (e) => {
        if ((e.ctrlKey || e.metaKey) && e.key === 'd') {
          e.preventDefault()
          this.toggleTheme()
        }
      })

      window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
        if (localStorage.getItem('dark-mode') === null) {
          this.isDark = e.matches
          this.applyTheme()
          this.updateIcon()
        }
      })
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => new DarkModeManager())
  } else {
    new DarkModeManager()
  }
</script>

<style>
  .dark-mode-toggle {
    position: fixed;
    top: var(--space-unit);
    right: var(--space-unit);
    background: var(--paper-elevated);
    border: 1px solid var(--line);
    border-radius: 50%;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast), transform var(--transition-fast);
    z-index: 1000;
    box-shadow: var(--shadow);
  }

  .dark-mode-toggle:hover {
    border-color: var(--line-subtle);
    box-shadow: var(--shadow-hover);
    transform: scale(1.04);
  }

  .dark-mode-toggle:active {
    transform: scale(0.98);
  }

  .dark-mode-toggle .icon {
    transition: color var(--transition-fast);
    color: var(--ink);
  }

  .dark-mode-toggle:focus {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  .dark-mode-toggle:focus:not(:focus-visible) {
    outline: none;
  }

  /* Design tokens â€” documento / CV: paper, ink, line */
  :root {
    --paper: #fafafa;
    --paper-elevated: #fff;
    --ink: #1a1a1a;
    --ink-secondary: #444;
    --ink-tertiary: #5c5c5c;
    --ink-muted: #737373;
    --line: rgba(0, 0, 0, 0.08);
    --line-subtle: rgba(0, 0, 0, 0.05);
    --accent: #2563eb;
    --accent-hover: #1d4ed8;
    --shadow: 0 1px 3px rgba(0, 0, 0, 0.06);
    --shadow-hover: 0 2px 6px rgba(0, 0, 0, 0.08);
    --space-unit: 8px;
    --radius-sm: 6px;
    --radius-md: 8px;
    --transition-fast: 150ms ease-out;
    /* Aliases para compatibilidad */
    --bg-color: var(--paper);
    --text-color: var(--ink);
    --border-color: var(--line);
    --muted-color: var(--ink-muted);
  }

  :root.dark {
    --paper: #0f0f0f;
    --paper-elevated: #1a1a1a;
    --ink: #f0f0f0;
    --ink-secondary: #b8b8b8;
    --ink-tertiary: #909090;
    --ink-muted: #737373;
    --line: rgba(255, 255, 255, 0.08);
    --line-subtle: rgba(255, 255, 255, 0.05);
    --accent: #60a5fa;
    --accent-hover: #93c5fd;
    --shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
    --shadow-hover: 0 2px 6px rgba(0, 0, 0, 0.4);
  }

  html {
    background-color: var(--paper);
    color: var(--ink);
    transition: background-color 0.25s ease-out, color 0.25s ease-out;
  }

  body {
    background-color: var(--paper);
    color: var(--ink);
  }

  p {
    color: var(--ink-secondary);
  }

  :root.dark footer {
    background: var(--paper-elevated);
    border-top-color: var(--line);
  }

  :root.dark kbd {
    background: var(--paper-elevated);
    color: var(--ink);
    border: 1px solid var(--line);
  }

  :root.dark #footer-button {
    background: var(--paper-elevated);
    border-color: var(--line);
  }

  :root.dark .hotkeypad-overlay {
    background: rgba(0, 0, 0, 0.8);
  }

  :root.dark .hotkeypad-modal {
    background: var(--paper-elevated);
    border: 1px solid var(--line);
  }

  :root.dark .hotkeypad-input {
    background: var(--paper);
    color: var(--ink);
    border-color: var(--line);
  }

  :root.dark .hotkeypad-command {
    color: var(--ink);
  }

  :root.dark .hotkeypad-command:hover {
    background: var(--line-subtle);
  }

  @media (max-width: 600px) {
    .dark-mode-toggle {
      top: var(--space-unit);
      right: var(--space-unit);
      width: 44px;
      height: 44px;
    }
  }
</style>
